{% extends 'index/index.html.twig' %}
{% block linkStyles %}
    <link href="../../styles/index/styles.css" rel="stylesheet">
    <link href="../../styles/index/vendor.css" rel="stylesheet">
    <link href="../../styles/summary/summary.css" rel="stylesheet">
    <link href="../../styles/summary/table.css" rel="stylesheet">
    <link href="../../styles/summary/table2.css" rel="stylesheet">
    <link href="../../styles/seo/selection.css" rel="stylesheet">
    <link href="../../styles/seo/slider.css" rel="stylesheet">
    <link href="../../styles/seo/table.css" rel="stylesheet">

    <script>
        function collapse(element) {
            let display = element.children[1].style.display
            element.children[1].style.display = display === "block" ? "none" : "block"
        }
    </script>
{% endblock %}
{% block body %}
    {% if token%}
        {% if processing is defined %}
            <div class="be-content">
                <div id="mp-stats-app" class="main-content container-fluid">
                    <div id="global-loader-block" aria-hidden="true" class="mp-loader-overlay ag-overlay hidden">
                        <div class="ag-overlay-panel">
                            <div class="ag-overlay-wrapper ag-layout-normal ag-overlay-loading-wrapper">
                                <div class="mp-loader-static"></div>
                            </div>
                        </div>
                    </div> <!---->
                    <div>
                        <div class="card">
                            <div class="card-header d-md-flex justify-content-between align-items-start pb-3 pt-3">
                                <div class="d-flex flex-column flex-lg-row justify-content-between justify-content-lg-start align-items-lg-center">
                                    <div class="d-flex flex-column flex-lg-block flex-lg-row">
                                        <div class="d-block-inline dropdown-period mr-3">
                                            <div class="btn-group d-flex flex-column flex-lg-block flex-lg-row">
                                                Происходит обработка, пожалуйста повторите позже
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div id="mp-stats-app" class="main-content container-fluid">
                <div id="global-loader-block" aria-hidden="true" class="mp-loader-overlay ag-overlay hidden">
                    <div class="ag-overlay-panel">
                        <div class="ag-overlay-wrapper ag-layout-normal ag-overlay-loading-wrapper">
                            <div class="mp-loader-static"></div>
                        </div>
                    </div>
                </div>
                <div>
                    <div class="card">
                        <div class="card-header py-3 d-flex justify-content-between align-items-center"><h1
                                    class="page-header my-0">Разделы рубрикатора</h1>
                            <div class="d-flex justify-content-between align-items-center"><label
                                        for="filter-categories"
                                        class="mb-0 mr-2">Поиск
                                    категории</label> <input id="filter-categories" type="text"></div>
                        </div> <!----></div>
                    <div id="page-categories-container" class="row">
                        {% for category in categories %}
                            <div class="col-xs-12 col-md-4">
                                <div onclick="collapse(this)" class="card bg-light">
                                    <div role="tab"
                                         class="card-header cursor-pointer py-1 px-3 mx-0 d-flex justify-content-between align-items-center collapsed"
                                         tabindex="0" aria-expanded="false"
                                         aria-controls="category-accordion-8d5e7e72f12067991186cdf3cb7d5d9d"
                                         style="overflow-anchor: none;"><span>{{ category.name }}</span> <i
                                                class="fas fa-caret-down"></i></div>
                                    <div id="category-accordion-8d5e7e72f12067991186cdf3cb7d5d9d" class="collapse"
                                         role="tabpanel"
                                         style="display: none;">
                                        <ul class="list-group list-group-flush subcategories">
                                            {% for subject in category.subject %}
                                                <li role="tab" class="list-group-item d-flex flex-column">
                                                    <div class="d-flex justify-content-between align-items-center cursor-pointer collapsed"
                                                         role="button" tabindex="0" aria-expanded="false"
                                                         aria-controls="category-accordion-8d5e7e72f12067991186cdf3cb7d5d9d-3c47285de656a84f0aeb9abc3c0f3596"
                                                         style="overflow-anchor: none;"><a
                                                                href="/wb/category?url=Premium%2F%D0%94%D0%B5%D1%82%D1%8F%D0%BC"><span>{{ subject }}</span>
                                                            <sup class="text-muted"><i
                                                                        class="fas fa-link"></i></sup></a> <i
                                                                class="fas fa-caret-down cursor-pointer lead"></i></div>
                                                    <div id="category-accordion-8d5e7e72f12067991186cdf3cb7d5d9d-3c47285de656a84f0aeb9abc3c0f3596"
                                                         class="collapse" role="tabpanel" style="display: none;">
                                                        <ul class="list-group list-group-flush mt-3">
                                                            <li class="list-group-item"><a
                                                                        href="/wb/category?url=Premium%2F%D0%94%D0%B5%D1%82%D1%8F%D0%BC%2F%D0%91%D0%B5%D0%BB%D1%8C%D0%B5%20%D0%B8%20%D0%BA%D1%83%D0%BF%D0%B0%D0%BB%D1%8C%D0%BD%D0%B8%D0%BA%D0%B8"><span>Белье и купальники</span>
                                                                    <sup class="text-muted"><i class="fas fa-link"></i></sup></a>
                                                            </li>
                                                            <li class="list-group-item"><a
                                                                        href="/wb/category?url=Premium%2F%D0%94%D0%B5%D1%82%D1%8F%D0%BC%2F%D0%9E%D0%B4%D0%B5%D0%B6%D0%B4%D0%B0"><span>Одежда</span>
                                                                    <sup class="text-muted"><i class="fas fa-link"></i></sup></a>
                                                            </li>
                                                        </ul>
                                                    </div>
                                                </li>
                                            {% endfor %}
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
                <div><!---->
                    <div class="snotify snotify-left_top"></div>
                    <div class="snotify snotify-left_center"></div>
                    <div class="snotify snotify-left_bottom"></div>
                    <div class="snotify snotify-right_top"></div>
                    <div class="snotify snotify-right_center"></div>
                    <div class="snotify snotify-right_bottom"></div>
                    <div class="snotify snotify-center_top"></div>
                    <div class="snotify snotify-center_center"></div>
                    <div class="snotify snotify-center_bottom"></div>
                </div>
            </div>
        {% endif %}
    {% else %}
        <div id="mp-stats-app" class="main-content container-fluid">
            <div id="global-loader-block" aria-hidden="true" class="mp-loader-overlay ag-overlay hidden">
                <div class="ag-overlay-panel">
                    <div class="ag-overlay-wrapper ag-layout-normal ag-overlay-loading-wrapper">
                        <div class="mp-loader-static"></div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="card card-border-color card-border-color-warning col-12 py-5">
                    <div class="card-body py-4"><p class="lead text-center">Для работы с разделами личного кабинета
                            необходимо добавить ключи API</p>
                        <div class="d-flex justify-content-center"><a href="/cabinet/connect" class="btn btn-success">Добавить</a>
                        </div>
                    </div>
                </div>
            </div> <!---->
            <div><!---->
                <div class="snotify snotify-left_top"></div>
                <div class="snotify snotify-left_center"></div>
                <div class="snotify snotify-left_bottom"></div>
                <div class="snotify snotify-right_top"></div>
                <div class="snotify snotify-right_center"></div>
                <div class="snotify snotify-right_bottom"></div>
                <div class="snotify snotify-center_top"></div>
                <div class="snotify snotify-center_center"></div>
                <div class="snotify snotify-center_bottom"></div>
            </div>
        </div>
    {% endif %}
{% endblock %}