{% extends 'index/index.html.twig' %}
{% block linkStyles %}
    <link href="../styles/index/styles.css" rel="stylesheet">
    <link href="../styles/index/vendor.css" rel="stylesheet">
    <link href="../styles/summary/summary.css" rel="stylesheet">
    <link href="../styles/summary/table.css" rel="stylesheet">
    <link href="../styles/summary/table2.css" rel="stylesheet">
    <script src="js/jquery-3.1.1.min.js"></script>
{% endblock %}
{% block body %}
    <form id="create_user" method="post">
        <h1>Создание пользователя</h1>
        {% if error ?? false %}
            {#            <div class="error">{{error}}</div> #}
            <div class="error">Неверные данные</div>
        {% endif %}
        <div>
            <label>Имя<input name="name" type="text"/></label>
        </div>
        <div>
            <label>Пароль<input name="password" type="password"/></label>
        </div>
        <div>
            <label>
                Дата истечения срока жизни аккаунта
                <select name="dateExpired">
                    <option value="always">Навсегда</option>
                    <option value="60">60 дней</option>
                    <option value="30">30 дней</option>
                    <option value="14">14 дней</option>
                    <option value="7">7 дней</option>
                </select>
            </label>
        </div>
        <div><input class="submit" type="submit" value="Создать"/></div>
    </form>
    <div style="display: flex;align-items: center;flex-direction: column;margin: 0 auto;">
        <table class="styled-table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Date expires</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users%}
                <tr>
                    <td>{{user.id}}</td>
                    <td>{{user.username}}</td>
                    <td>
                        {% if user.dateExpired %}
                            {{user.dateExpired|date("m/d/Y") }}
                        {% else %}
                            Date empty
                        {%endif%}
                    </td>
                </tr>
            {% endfor%}
            </tbody>
        </table>
    </div>
    <style>
        .styled-table tbody tr {
            border-bottom: 1px solid #dddddd;
        }

        .styled-table tbody tr:nth-of-type(even) {
            background-color: #f3f3f3;
        }

        .styled-table tbody tr:last-of-type {
            border-bottom: 2px solid #009879;
        }

        .styled-table th,
        .styled-table td {
            padding: 12px 15px;
        }

        .styled-table thead tr {
            background-color: #009879;
            color: #ffffff;
            text-align: left;
        }

        .styled-table {
            border-collapse: collapse;
            margin: 25px 0;
            font-size: 0.9em;
            font-family: sans-serif;
            min-width: 400px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.15);
        }

        #create_user {
            display: flex;
            flex-direction: column;
            align-items: center;
            padding-top: 20vh;
            padding-bottom: 20vh;
            background: white;
            border-radius: 2vh;
            width: 40vw;
            margin: 0 auto;
        }

        #create_user :only-child {
            margin: 2vh;
        }

        label {
            text-align: center;
            display: flex;
            flex-direction: column;
        }

        p {
            margin-bottom: 5vh;
        }

        .error {
            color: red;
            font-size: 2vh;
            margin: 0;
        }

        form input {
            background: #c4c4c4;
            text-align: center;
            border: none;
            width: 12vw;
            height: 3vh;
            padding: 1vh;
            border-radius: 2vh;
            font-size: 2vh;
        }

        .submit {
            margin-top: 5vh;
            width: auto;
            background: #81ff86;
            font-size: 3vh;
            height: auto;
            padding: 1vh 3vh;
            border-radius: 2vh;
            color: black;
        }

        select {
            text-align: center;
        }
    </style>
{% endblock %}